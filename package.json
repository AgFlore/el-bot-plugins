  "main": "index.js",
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna exec -- rm -rf dist",
    "build": "yarn clean && lerna exec -- babel . -d dist --config-file ../../babel.config.js",
    "lint": "eslint --ext .js packages",
    "dev": "echo 你在教我做事？",
